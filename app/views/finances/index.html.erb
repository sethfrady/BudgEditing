<h1>List of Budgets</h1>
<%= link_to 'Create New Budget', new_finance_path %>

<table>
    <tr>
        <th>Budget</th>
    </tr>
    
    <% @finances.each do |finance| %>
        <tr>
            <td><%= finance.title %> </td>
            <td><%= link_to finance.title, finance_path(finance) %></td>
            <td><%= link_to 'Edit', edit_finance_path(finance) %></td>
        </tr>
    <% end %>
</table>
<%= link_to 'Back', controller: 'welcome' %>