<h2>Spending Details</h2>
<%= form_for([@finance, @finance.comments.build]) do |f| %>
    <p>
        <%= f.label :date %><br>
        <%= f.text_field :date %>
    </p>
    <p>
        <%= f.label :body %><br>
        <%= f.text_area :body %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>

